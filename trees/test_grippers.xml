<?xml version="1.0" encoding="UTF-8"?>
<root BTCPP_format="4">

  <BehaviorTree ID="TestGrippers">
    <Sequence>

      <!-- Connect both grippers -->
      <ConnectGripper port="LEFT_GRIPPER_PORT" gripper_type="DHAG"/>
      <ConnectGripper port="RIGHT_GRIPPER_PORT" gripper_type="DHAG"/>

      <!-- Open both (waits for completion) -->
      <Parallel success_count="2" failure_count="1">
        <OpenGripperAsync port="LEFT_GRIPPER_PORT"/>
        <OpenGripperAsync port="RIGHT_GRIPPER_PORT"/>
      </Parallel>

      <!-- Close both (waits for completion) -->
      <Parallel success_count="2" failure_count="1">
        <CloseGripperAsync port="LEFT_GRIPPER_PORT"/>
        <CloseGripperAsync port="RIGHT_GRIPPER_PORT"/>
      </Parallel>

      <!-- Open both again (waits for completion) -->
      <Parallel success_count="2" failure_count="1">
        <OpenGripperAsync port="LEFT_GRIPPER_PORT"/>
        <OpenGripperAsync port="RIGHT_GRIPPER_PORT"/>
      </Parallel>

      <!-- Disconnect -->
      <DisconnectGripper port="LEFT_GRIPPER_PORT"/>
      <DisconnectGripper port="RIGHT_GRIPPER_PORT"/>

    </Sequence>
  </BehaviorTree>

</root>
