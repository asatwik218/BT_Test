<?xml version="1.0" encoding="UTF-8"?>
<root BTCPP_format="4">

  <BehaviorTree ID="TestAMR">
    <Sequence>

      <!-- Connect -->
      <ConnectAMR ip="AMR_IP_PLACEHOLDER" amr_type="SEER"/>

      <!-- Move to first waypoint (waits for completion) -->
      <GoToAMRAsync ip="AMR_IP_PLACEHOLDER" dest_id="waypoint_A"/>

      <!-- Stop at first waypoint -->
      <StopAMR ip="AMR_IP_PLACEHOLDER" emergency_stop="false"/>

      <!-- Move to second waypoint (waits for completion) -->
      <GoToAMRAsync ip="AMR_IP_PLACEHOLDER" dest_id="waypoint_B"/>

      <!-- Disconnect -->
      <DisconnectAMR ip="AMR_IP_PLACEHOLDER"/>

    </Sequence>
  </BehaviorTree>

</root>
